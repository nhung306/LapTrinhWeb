@using WebsiteFlower.Models;
@model List<Giohang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center">THÔNG TIN GIỎ HÀNG</h2>
<table class="table table-bordered" align="center" border="1">
    <tr style="text-align:center; font-weight: bold; color:black">
        <td>  Mã hoa  </td>
        <td>  Tên hoa  </td>
        <td>  Ảnh  </td>
        <td>  Số lượng </td>
        <td>  Đơn giá  </td>
        <td>  Thành tiền  </td>
        <td width="50px"></td>
        <td width=" 50px"></td>
        <td width=" 50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align: center; font-weight: bold; color: black">
            <td> @item.iMASP </td>
            <td> @item.sTENSP </td>
            <td><img src="~/Images/@item.sANH" width="80px"> </td>
            @using (Html.BeginForm("CapnhatGioHang", "GioHang", new { @iMASP = item.iMASP }))
            {
                <td>
                    <input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" style="background-color: yellow" />
                </td>
                <td> @string.Format("{0:0,0}", item.dGIABAN) </td>
                <td> @string.Format("{0:0,0}", item.dThanhTien) </td>
                <td><a href="@Url.Action("Details","BFlower", new { id = item.iMASP })">Chi tiết</a></td>
                <td> <a> @Html.ActionLink("Xóa", "XoaGioHang", new { @iMASP = item.iMASP })</a></td>
                <td> <input type="submit" value="Cập nhật" /></td>
            }
        </tr>
    }
    <tr style="font-weight: bold; text-align: right; color: red">
        <td colspan="4"> Số lượng: @ViewBag.Tongsoluong  </td>
        <td colspan="5"> Tổng tiền: @string.Format("{0:0,0}", ViewBag.Tongtien) VND </td>
    </tr>
    <tr style="font-weight: bold; color: blue; text-align:right">
        <td colspan="9">
            <a> @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatCaGioHang")  </a>
        </td>
    </tr>
    <tr style="font-weight: bold; color: blue; text-align:center">
        <td colspan="9">
            <a style="color:black"> @Html.ActionLink("Đặt hàng", "DatHang", "GioHang")  </a>
        </td>
    </tr>
</table>


