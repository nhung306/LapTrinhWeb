<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>B.Flower</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="shortcut icon" href="~/Images/logo-icon.jpg">
    <link href="https://fonts.googleapis.com/css?family=Rochester" rel="stylesheet">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Trang chủ", "TrangChu", "Admin", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ">
                    <li>@Html.ActionLink("Quản lý hoa tươi", "Hoa", "Admin")</li>
                    <li>@Html.ActionLink("Quản lý nhà cung cấp", "NhaCC", "Admin")</li>
                    <li>@Html.ActionLink("Quản lý khách hàng", "KhachHang", "Admin")</li>
                    @if (Session["TaikhoanAdmin"] != null)
                    {
                        using (Html.BeginForm("DangXuat", "NguoiDung", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()

                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    @Html.ActionLink("Hello " + Session["TenDn"] + "!", "TrangChu", "BFlower")
                                </li>
                                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                            </ul>
                        }
                    }
                </ul>

            </div>
        </div>
    </div>
    <div class="jumbotron">
        <h1>B.Flower</h1>
      <p>Không chỉ là hoa mà còn là tình yêu</p>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - B.Flower. All rights reserved. Design by <a href="http://www.templatewire.com" rel="nofollow">Team</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>