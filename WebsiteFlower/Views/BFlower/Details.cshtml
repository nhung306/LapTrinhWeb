
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; text-transform:uppercase ">Chi tiết sản phẩm</h2>

<div class="container">
    <div class="col-md-4">
        <div class="card">
            <h5 class="card-header">@Model.TENSP</h5>
            <div class="card-body">
                <a>
                    <img alt="@Model.TENSP" src="~/Images/@Model.ANH" width=300px height=250px />
                </a>
            </div>
            <div class="card-footer text-muted">
                <p class="col-md-6">Giá bán: @string.Format("{0:0,0}", Model.GIABAN) đ</p>
                <a style="text-align:right" href="@Url.Action("ThemGioHang","GioHang", new { @iMASP = Model.MASP, @strURL= Request.Url.ToString() })" class="btn btn-primary">
                    Đặt mua
                </a>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Trở về", "GioHang", "GioHang")
</p>
