@model WebsiteFlower.Models.KHACHHANG

@{
    ViewBag.Title = "DetailsKH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<<h2 style="text-align:center">Thông tin chi tiết khách hàng</h2>

<div class="container" style="color: black; font-weight: bold">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ tên khách hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HOTEN)
        </dd>

        <dt>
           Tài khoản:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TAIKHOAN)
        </dd>

        <dt>
           Mật khẩu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MATKHAU)
        </dd>

        <dt>
           Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EMAIL)
        </dd>

        <dt>
            Địa chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DIACHIKH)
        </dd>

        <dt>
           Điện thoại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DIENTHOAIKH)
        </dd>

        <dt>
            Ngày sinh:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.NGAYSINH)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "EditKH", new { id = Model.MAKH }) |
    @Html.ActionLink("Trở về", "KhachHang")
</p>
