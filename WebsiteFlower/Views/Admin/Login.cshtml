

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>B.Flower</title>

    <link rel="shortcut icon" href="~/Images/logo-icon.jpg">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="~/Content/Style.css" rel="stylesheet" />

</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Đăng nhập quản lý hệ thống</h3>
                    <p>Vui lòng nhập tài khoản và mật khẩu</p>
                    <h4 style="color:red; text-align:center">@ViewBag.ThongBao</h4>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <div class="card-body">
                        <form>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                </div>
                                <input type="text" name="username" class="form-control" placeholder="Tài khoản">
                                @ViewData["loi1"]
                            </div>
                            <div class="input-group form-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    @ViewData["loi2"]
                                </div>
                                <input type="password" name="pass" class="form-control" placeholder="Mật khẩu">
                            </div>
                            <div class="row align-items-center remember">
                                <input type="checkbox">Remember Me
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Đăng nhập" class="btn float-right login_btn">
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
