@model WebsiteFlower.Models.NCC

@{
    ViewBag.Title = "DeleteNCC";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Xác nhận thông tin xóa</h2>

<h3>Bạn có chắc là xóa nhà cung cấp này?</h3>
<div style="color:black; font-weight:bold">
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Tên nhà cung cấp:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENNCC)
        </dd>

        <dt>
            Điện thoại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DIENTHOAI)
        </dd>

        <dt>
            Địa chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DIACHI)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "NhaCC")
        </div>
    }
</div>
