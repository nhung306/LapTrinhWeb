
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 style="color: red; text-align: center">@ViewBag.ThongBao</h4>

<table style="color:black" class="table table-bordered" align="center" border="1">
    <h2 style="text-align: center">Đăng nhập</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height: 40px; font-weight:bold">
            <td>Tên đăng nhập</td>
            <td> @Html.TextBox("TenDn") @ViewData["loi2"]</td>
        </tr>
        <tr style="height: 40px; font-weight:bold">
            <td>Mật khẩu</td>
            <td> @Html.Password("MatKhau") @ViewData["loi3"]</td>
        </tr>
        <tr style="height: 40px">
            <td></td>
            <td> <input type="submit" value="Đăng nhập" /> </td>
        </tr>
    }
</table>

